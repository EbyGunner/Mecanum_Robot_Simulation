<?xml version="1.0"?>

<robot name="Mecanum_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="material.xacro" />

  <xacro:include filename="gazebo_control.xacro" />

  <xacro:include filename="gazeboTransforms_update.xacro" />

  <!-- <xacro:include filename="gazeboCamera.xacro" /> -->

  <xacro:include filename="gazeboLidar.xacro" />

  <xacro:include filename="gazeboDepthCamera.xacro" />

  <link name="base_link"></link>

  <link name="chasis">
    <inertial>
      <origin xyz="-8.294E-05 -7.7011E-11 -0.023972" rpy="0 0 0" />
      <mass value="6.5996" />
      <inertia ixx="0.043356" ixy="-1.6809E-08" ixz="-1.7057E-07" iyy="0.13461" iyz="3.8673E-11" izz="0.17533" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="file://$(find robot_package)/description/meshes/chasis.STL"/>
      </geometry>
      <material name="blue" />
    </visual>  
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="file://$(find robot_package)/description/meshes/chasis.STL"/>
      </geometry>
    </collision>
  </link>
  <joint name="chasis_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="chasis" />
  </joint>

  <link name="back_right_wheel_link">
    <inertial>
      <origin xyz="1.624E-12 -3.4926E-12 0.021031" rpy="0 0 0" />
      <mass value="0.049871" />
      <inertia ixx="5.3189E-06" ixy="1.2084E-15" ixz="-9.388E-17" iyy="5.3189E-06" iyz="1.994E-16" izz="6.4396E-06" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="file://$(find robot_package)/description/meshes/back_right_wheel.STL"/>
      </geometry>
      <material name="green" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="file://$(find robot_package)/description/meshes/back_right_wheel.STL"/>
      </geometry>
    </collision>
  </link>
  <joint name="back_right_wheel_joint" type="continuous">
    <origin xyz="0.1175 0.113 -0.03" rpy="${math.pi/2} 0 ${math.pi}" />
    <parent link="chasis" />
    <child link="back_right_wheel_link" />
    <axis xyz="0 0 1" />
    <limit lower="-3.14" upper="3.14" effort="200" velocity="5" />
  </joint>

  <link name="back_left_wheel_link">
    <inertial>
      <origin xyz="-6.2922E-13 3.7938E-12 0.021031" rpy="0 0 0" />
      <mass value="0.049871" />
      <inertia ixx="5.3189E-06" ixy="5.4099E-16" ixz="3.9906E-17" iyy="5.3189E-06" iyz="-2.1312E-16" izz="6.4396E-06" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="file://$(find robot_package)/description/meshes/back_left_wheel.STL"/>
      </geometry>
      <material name="green" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="file://$(find robot_package)/description/meshes/back_left_wheel.STL"/>
