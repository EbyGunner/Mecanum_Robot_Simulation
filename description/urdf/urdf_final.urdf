  </link>
  <joint name="back_left_wheel_joint" type="continuous">
    <origin xyz="0.1175 -0.113 -0.03" rpy="-${math.pi/2} 0 ${math.pi}" />
    <parent link="chasis" />
    <child link="back_left_wheel_link" />
    <axis xyz="0 0 1" />
    <limit lower="-3.14" upper="3.14" effort="200" velocity="5" />
  </joint>

  <link name="front_right_wheel_link">
    <inertial>
      <origin xyz="-6.2939E-13 3.7953E-12 0.021031" rpy="0 0 0" />
      <mass value="0.049871" />
      <inertia ixx="5.3189E-06" ixy="5.4109E-16" ixz="3.6773E-17" iyy="5.3189E-06" iyz="-2.1556E-16" izz="6.4396E-06" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="file://$(find robot_package)/description/meshes/front_right_wheel.STL"/>
      </geometry>
      <material name="green" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="file://$(find robot_package)/description/meshes/front_right_wheel.STL"/>
      </geometry>
    </collision>
  </link>
  <joint name="front_right_wheel_joint" type="continuous">
    <origin xyz="-0.1175 0.113 -0.03" rpy="${math.pi/2} 0 ${math.pi}" />
    <parent link="chasis" />
    <child link="front_right_wheel_link" />
    <axis xyz="0 0 1" />
    <limit lower="-3.14" upper="3.14" effort="200" velocity="5" />
  </joint>

  <link name="front_left_wheel_link">
    <inertial>
      <origin xyz="1.451E-12 -3.5752E-12 0.021031" rpy="0 0 0" />
      <mass value="0.049871" />
      <inertia ixx="5.3189E-06" ixy="1.1259E-15" ixz="-8.0856E-17" iyy="5.3189E-06" iyz="2.0104E-16" izz="6.4396E-06" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="file://$(find robot_package)/description/meshes/front_left_wheel.STL"/>
        <material name="green" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="file://$(find robot_package)/description/meshes/front_left_wheel.STL"/>
      </geometry>
    </collision>
  </link>
  <joint name="front_left_wheel_joint" type="continuous">
    <origin xyz="-0.1175 -0.113 -0.03" rpy="-${math.pi/2} 0 ${math.pi}" />
    <parent link="chasis" />
    <child link="front_left_wheel_link" />
    <axis xyz="0 0 1" />
    <limit lower="-3.14" upper="3.14" effort="200" velocity="5" />
  </joint>

</robot>